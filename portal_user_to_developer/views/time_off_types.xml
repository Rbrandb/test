<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--action-->
    <!--    form view-->
    <record id="time_off_type_form" model="ir.ui.view">
        <field name="name">time_off_type_form</field>
        <field name="model">time.off.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="time_off_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="time_off_type_root_action" model="ir.actions.act_window">
        <field name="name">Time off types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">time.off.type</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create!
            </p>
        </field>
    </record>


    <menuitem id="time_off_type_root"
              name="Time off Types"
              parent="employee_hub_root"
              action="time_off_type_root_action"
              sequence="12"/>

</odoo>